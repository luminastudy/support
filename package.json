{
  "name": "@lumina-study/support",
  "version": "0.0.0",
  "private": true,
  "description": "Lumina Study support and documentation site",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "start:dev": "docusaurus start --port 9672",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css}\"",
    "spell": "cspell lint '**/*.{ts,tsx,js,jsx,md,mdx,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,tsx,js,jsx,md,mdx,json}' --gitignore",
    "knip": "knip",
    "prepare": "husky",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs lumina-support-dev",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@lumina-study/block-schema": "^1.0.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@lumina-study/logo": "^1.0.0",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/parser": "^8.47.0",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-config-agent": "^1.8.7",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "knip": "^5.70.1",
    "lint-staged": "^16.2.7",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  }
}
